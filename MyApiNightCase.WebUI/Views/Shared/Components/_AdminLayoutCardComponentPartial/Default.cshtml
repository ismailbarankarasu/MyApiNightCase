<div class="container-fluid">
    <!-- İstatistik Kartları -->
    <div class="row">
        <!-- Kitap Sayısı Kartı -->
        <div class="col-sm-6 col-xl-3">
            <div class="card overflow-hidden rounded-2">
                <div class="card-body bg-primary-subtle">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="ti ti-book-2 text-primary fs-7" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h3 class="mb-1 fs-4 fw-semibold">@ViewBag.BookCount</h3>
                            <p class="fs-3 mb-0">Toplam Kitap</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Yazar Sayısı Kartı -->
        <div class="col-sm-6 col-xl-3">
            <div class="card overflow-hidden rounded-2">
                <div class="card-body bg-success-subtle">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="ti ti-users text-success fs-7" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h3 class="mb-1 fs-4 fw-semibold">@ViewBag.AuthorCount</h3>
                            <p class="fs-3 mb-0">Toplam Yazar</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kategori Sayısı Kartı -->
        <div class="col-sm-6 col-xl-3">
            <div class="card overflow-hidden rounded-2">
                <div class="card-body bg-warning-subtle">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="ti ti-category text-warning fs-7" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h3 class="mb-1 fs-4 fw-semibold">@ViewBag.CategoryCount</h3>
                            <p class="fs-3 mb-0">Kategori Sayısı</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Sayısı Kartı -->
        <div class="col-sm-6 col-xl-3">
            <div class="card overflow-hidden rounded-2">
                <div class="card-body bg-info-subtle">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="ti ti-user-check text-info fs-7" style="font-size:2.5rem;"></i>
                        </div>
                        <div>
                            <h3 class="mb-1 fs-4 fw-semibold">@ViewBag.AvgBookPrice ₺</h3>
                            <p class="fs-3 mb-0">Ortalama Kitap Fiyatı</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>