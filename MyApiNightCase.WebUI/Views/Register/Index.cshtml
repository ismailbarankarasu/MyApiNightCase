@model (RegisterViewModel RegisterVM, LoginViewModel LoginVM)
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
	<meta charset="UTF-8">
	<title>Kayıt Ol</title>
	<link rel="stylesheet" href="~/loginDist/style.css">

</head>
<body>
	<!-- partial:index.partial.html -->
	<div id="container" class="container">
		<!-- FORM SECTION -->
		<div class="row">
			<!-- SIGN UP -->
			<div class="col align-items-center flex-col sign-up">
				<div class="form-wrapper align-items-center">
					<div class="form sign-up">
						<form method="post" asp-controller="Register" asp-action="Index">
							<div class="input-group">
								<i class='bx bxs-user'></i>
								<input type="text" name="RegisterVM.UserName" placeholder="Kullanıcı Adı">
								<span asp-validation-for="RegisterVM.UserName" class="text-danger"></span>
							</div>
							<div class="input-group">
								<i class='bx bx-mail-send'></i>
								<input type="email" name="RegisterVM.Email" placeholder="Email">
								<span asp-validation-for="RegisterVM.Email" class="text-danger"></span>
							</div>
							<div class="input-group">
								<i class='bx bxs-lock-alt'></i>
								<input type="text" name="RegisterVM.Name" placeholder="Adınız">
								<span asp-validation-for="RegisterVM.Name" class="text-danger"></span>
							</div>
							<div class="input-group">
								<i class='bx bxs-lock-alt'></i>
								<input type="text" name="RegisterVM.Surname" placeholder="Soyadınız">
								<span asp-validation-for="RegisterVM.Surname" class="text-danger"></span>
							</div>
							<div class="input-group">
								<i class='bx bxs-lock-alt'></i>
								<input type="password" name="RegisterVM.Password" placeholder="Şifreniz">
								<span asp-validation-for="RegisterVM.Password" class="text-danger"></span>
							</div>
							<button type="submit">
								Kayıt Ol
							</button>
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						</form>
						<p>
							<span>
								Zaten Hesabın Varmı ?
							</span>
							<b onclick="toggle()" class="pointer">
								Giriş Yap
							</b>
						</p>
					</div>
				</div>

			</div>
			<!-- END SIGN UP -->
			<!-- SIGN IN -->
			<div class="col align-items-center flex-col sign-in">
				<div class="form-wrapper align-items-center">
					<div class="form sign-in">
						<form method="post" asp-controller="Login" asp-action="Index">
							@if (ViewData["ReturnUrl"] != null)
							{
								<input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
							}
							<div class="input-group">
								<i class='bx bxs-user'></i>
								<input type="text" name="LoginVM.UserName" asp-for="LoginVM.UserName" placeholder="Username">
								<span asp-validation-for="LoginVM.UserName" class="text-danger"></span>
							</div>
							<div class="input-group">
								<i class='bx bxs-lock-alt'></i>
								<input type="password" name="LoginVM.Password" asp-for="LoginVM.Password" placeholder="Password">
								<span asp-validation-for="LoginVM.Password" class="text-danger"></span>
							</div>
							<button type="submit">
								Giriş Yap
							</button>
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						</form>
						<p>
							<b>
								Şifremi Unuttum ?
							</b>
						</p>
						<p>
							<span>
								Hesabın Yokmu ?
							</span>
							<b onclick="toggle()" class="pointer">
								Kayıt Ol
							</b>
						</p>
					</div>
				</div>
				<div class="form-wrapper">
				</div>
			</div>
			<!-- END SIGN IN -->
		</div>
		<!-- END FORM SECTION -->
		<!-- CONTENT SECTION -->
		<div class="row content-row">
			<!-- SIGN IN CONTENT -->
			<div class="col align-items-center flex-col">
				<div class="text sign-in">
					<h2>
						Hoşgeldiniz !
					</h2>

				</div>
				<div class="img sign-in">
				</div>
			</div>
			<!-- END SIGN IN CONTENT -->
			<!-- SIGN UP CONTENT -->
			<div class="col align-items-center flex-col">
				<div class="img sign-up">
				</div>
				<div class="text sign-up">
					<h2>
						Bize Katıl
					</h2>

				</div>
			</div>
			<!-- END SIGN UP CONTENT -->
		</div>
		<!-- END CONTENT SECTION -->
	</div>
	<!-- partial -->
	<script src="~/loginDist/script.js"></script>

</body>
</html>
